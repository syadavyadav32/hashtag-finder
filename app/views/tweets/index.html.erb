<h2>Results for <%= @htname %> </h2>

<table>
    <tr>
      <td>Username</td>
      <td>Tweet</td>
    </tr>
<% $client.search(@htname, result_type: "recent").take(10).collect do |tweet| %>
    <tr>
      <td><%= "#{tweet.user.screen_name}" %></td> 
      <td><%= "#{tweet.text}" %> </td>
    </tr>
<% end %>
</table>

<%= link_to "Search New Hashtag", new_hashtag_path %>